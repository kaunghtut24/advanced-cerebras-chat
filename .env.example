# Cerebras Chat Interface Environment Variables
# Copy this file to .env and fill in your actual values

# Cerebras API Configuration
CEREBRAS_API_KEY=your_cerebras_api_key_here

# Optional: Cerebras Base URL (defaults to https://api.cerebras.ai)
# CEREBRAS_BASE_URL=https://api.cerebras.ai

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=False

# Server Configuration
HOST=0.0.0.0
PORT=5000

# Rate Limiting Configuration
RATE_LIMIT_STORAGE=memory://
RATE_LIMIT_DEFAULT=200 per day, 50 per hour
RATE_LIMIT_CHAT=30 per minute

# Application Configuration
MAX_CONTENT_LENGTH=16777216
MAX_HISTORY_LENGTH=20

# Logging Configuration
LOG_LEVEL=INFO

# RAG Configuration
# Embedding model (sentence-transformers model name)
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Qdrant Configuration
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=
# QDRANT_IN_MEMORY: Set to 'true' for in-memory (data lost on restart) or 'false' for persistent storage
QDRANT_IN_MEMORY=false
# QDRANT_PATH: Local directory for persistent file storage (only used when QDRANT_IN_MEMORY=false and not using remote server)
# Leave empty or set to 'localhost' to connect to a Qdrant server instead
QDRANT_PATH=./qdrant_storage

# RAG Settings
RAG_ENABLED=true
RAG_TOP_K=5
# Score threshold for RAG search (0.0-1.0). Lower = more results but less precise
# 0.3 = good recall (recommended), 0.5 = balanced, 0.7 = high precision
RAG_SCORE_THRESHOLD=0.3
CHUNK_SIZE=500
CHUNK_OVERLAP=50

# File Upload Configuration
MAX_FILE_SIZE=52428800
ALLOWED_EXTENSIONS=pdf,docx,doc,pptx,ppt,xlsx,xls,txt,md,html,jpg,jpeg,png,gif

# Web Search Configuration
# Exa Search (Primary) - Get your API key from https://dashboard.exa.ai/api-keys
EXA_API_KEY=your_exa_api_key_here
EXA_ENABLED=true

# Brave Search (Fallback) - Get your API key from https://brave.com/search/api/
BRAVE_API_KEY=your_brave_api_key_here
BRAVE_ENABLED=true

# Web Search Settings
WEB_SEARCH_MAX_RESULTS=5
WEB_SEARCH_INCLUDE_TEXT=true
WEB_SEARCH_TEXT_LENGTH=1000
# Diversity settings - limit results per domain for diverse sources
# MAX_PER_DOMAIN: Maximum results from same domain (default: 2)
WEB_SEARCH_MAX_PER_DOMAIN=2
# DIVERSITY_MULTIPLIER: Request this many times more results to filter for diversity (default: 3)
WEB_SEARCH_DIVERSITY_MULTIPLIER=3
