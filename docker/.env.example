# Cerebras Chat Interface - Docker Environment Variables
# Copy this file to .env and fill in your API keys

# ============================================================================
# REQUIRED: API Keys
# ============================================================================

# Cerebras API Key (REQUIRED)
# Get your API key from: https://cloud.cerebras.ai/
CEREBRAS_API_KEY=your_cerebras_api_key_here

# ============================================================================
# OPTIONAL: Web Search API Keys
# ============================================================================

# Exa API Key (for web search)
# Get your API key from: https://exa.ai/
EXA_API_KEY=your_exa_api_key_here

# Brave Search API Key (fallback for web search)
# Get your API key from: https://brave.com/search/api/
BRAVE_API_KEY=your_brave_api_key_here

# ============================================================================
# Flask Configuration
# ============================================================================

FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=false

# ============================================================================
# RAG (Retrieval-Augmented Generation) Configuration
# ============================================================================

# Enable/disable RAG feature
RAG_ENABLED=true

# Number of top results to retrieve from knowledge base
RAG_TOP_K=5

# Score threshold for RAG search (0.0-1.0)
# Lower = more results but less precise, Higher = fewer results but more precise
# 0.3 = good recall (recommended), 0.5 = balanced, 0.7 = high precision
RAG_SCORE_THRESHOLD=0.3

# Text chunking configuration
CHUNK_SIZE=500
CHUNK_OVERLAP=50

# ============================================================================
# Qdrant Vector Database Configuration
# ============================================================================

# Use in-memory storage (false = persistent file-based storage)
QDRANT_IN_MEMORY=false

# Path for persistent storage (used when QDRANT_IN_MEMORY=false)
# In Docker, this is mapped to a volume
QDRANT_PATH=/app/qdrant_storage

# ============================================================================
# Web Search Configuration
# ============================================================================

# Enable/disable web search feature
WEB_SEARCH_ENABLED=true

# Maximum number of web search results to return
WEB_SEARCH_MAX_RESULTS=5

# Diversity multiplier (request N times more results to filter for diversity)
WEB_SEARCH_DIVERSITY_MULTIPLIER=3

# Maximum results per domain (for diversity)
WEB_SEARCH_MAX_PER_DOMAIN=2

# ============================================================================
# Rate Limiting
# ============================================================================

# Rate limit for chat endpoint
RATE_LIMIT_CHAT=30 per minute

# Rate limit for file upload endpoint
RATE_LIMIT_UPLOAD=10 per minute

# ============================================================================
# Conversation History
# ============================================================================

# Maximum number of messages to keep in conversation history
MAX_HISTORY_LENGTH=20

